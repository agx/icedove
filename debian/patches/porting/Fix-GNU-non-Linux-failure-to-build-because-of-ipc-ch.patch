Subject: Fix GNU/non-Linux failure to build because of
 ipc/chromium/src/base/dir_reader_posix.h

---
 mozilla/ipc/chromium/src/base/dir_reader_posix.h |    4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

Index: icedove/mozilla/ipc/chromium/src/base/dir_reader_posix.h
===================================================================
--- icedove.orig/mozilla/ipc/chromium/src/base/dir_reader_posix.h	2012-10-13 14:20:18.846169278 +0530
+++ icedove/mozilla/ipc/chromium/src/base/dir_reader_posix.h	2012-10-13 15:57:32.030440200 +0530
@@ -18,7 +18,7 @@
 // seems worse than falling back to enumerating all file descriptors so we will
 // probably never implement this on the Mac.
 
-#if defined(OS_LINUX) && !defined(OS_OPENBSD)
+#if defined(OS_LINUX) && defined(__linux__)
 #include "base/dir_reader_linux.h"
 #else
 #include "base/dir_reader_fallback.h"
@@ -26,7 +26,7 @@
 
 namespace base {
 
-#if defined(OS_LINUX) && !defined(OS_OPENBSD)
+#if defined(OS_LINUX) && defined(__linux__)
 typedef DirReaderLinux DirReaderPosix;
 #else
 typedef DirReaderFallback DirReaderPosix;

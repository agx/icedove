Index: icedove/mozilla/ipc/chromium/src/base/platform_thread_posix.cc
===================================================================
--- icedove.orig/mozilla/ipc/chromium/src/base/platform_thread_posix.cc	2012-10-15 20:21:26.000000000 +0530
+++ icedove/mozilla/ipc/chromium/src/base/platform_thread_posix.cc	2012-10-15 20:29:26.859223651 +0530
@@ -42,7 +42,11 @@
   // TODO(BSD): find a better thread ID
   return (intptr_t)(pthread_self());
 #elif defined(OS_LINUX)
+#ifdef __NR_gettid
   return syscall(__NR_gettid);
+#else
+  return getpid();
+#endif
 #endif
 }
 

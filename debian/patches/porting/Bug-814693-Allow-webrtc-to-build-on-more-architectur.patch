+  $(NULL)
+endif
diff --git a/mozilla/media/webrtc/trunk/src/modules/audio_coding/codecs/pcm16b/pcm16b.c b/mozilla/media/webrtc/trunk/src/modules/audio_coding/codecs/pcm16b/pcm16b.c

===================================================================
--- icedove.orig/mozilla/xpcom/glue/standalone/nsGlueLinkingDlopen.cpp	2012-10-15 20:21:22.423201153 +0530
+++ icedove/mozilla/xpcom/glue/standalone/nsGlueLinkingDlopen.cpp	2012-10-15 20:40:31.199254507 +0530
@@ -184,6 +184,9 @@
 static void
 ReadDependentCB(const char *aDependentLib, bool do_preload)
 {
+    char lib[MAXPATHLEN];
+    if (realpath(aDependentLib, lib))
+        aDependentLib = lib;
 #if defined(LINUX) && !defined(ANDROID)
     if (do_preload)
         preload(aDependentLib);

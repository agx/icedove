From: Mike Hommey <mh@glandium.org>
Date: Tue, 9 Mar 2010 09:44:37 +0100
Subject: Allow to build against system libffi

https://bugzilla.mozilla.org/show_bug.cgi?id=551138
---
 mozilla/config/autoconf.mk.in            |    4 ++++
 mozilla/configure.in                     |   14 +++++++++++++-
 mozilla/js/ctypes/Makefile.in            |    8 ++++++++
 mozilla/toolkit/library/libxul-config.mk |    3 +++
 mozilla/toolkit/toolkit-tiers.mk         |    2 ++
 5 files changed, 30 insertions(+), 1 deletions(-)

diff --git a/mozilla/config/autoconf.mk.in b/mozilla/config/autoconf.mk.in
index c1fbb20..3b6e912 100644
--- a/mozilla/config/autoconf.mk.in
+++ b/mozilla/config/autoconf.mk.in
@@ -233,6 +233,10 @@ MOZ_NATIVE_LIBEVENT = @MOZ_NATIVE_LIBEVENT@
 MOZ_LIBEVENT_LIBS = @MOZ_LIBEVENT_LIBS@
 MOZ_LIBEVENT_INCLUDES = @MOZ_LIBEVENT_INCLUDES@
 
+MOZ_NATIVE_FFI = @MOZ_NATIVE_FFI@
+MOZ_FFI_LIBS = @MOZ_FFI_LIBS@
+MOZ_FFI_CFLAGS = @MOZ_FFI_CFLAGS@
+
 MOZ_NATIVE_ZLIB	= @SYSTEM_ZLIB@
 MOZ_NATIVE_BZ2	= @SYSTEM_BZ2@
 MOZ_NATIVE_JPEG	= @SYSTEM_JPEG@
diff --git a/mozilla/configure.in b/mozilla/configure.in
index a3a30dd..3d4d9a9 100644
--- a/mozilla/configure.in
+++ b/mozilla/configure.in
@@ -4508,6 +4508,18 @@ fi
 
 AC_SUBST(SYSTEM_HUNSPELL)
 
+dnl system libffi Support
+dnl ========================================================
+MOZ_ARG_ENABLE_BOOL(system-ffi,
+[  --enable-system-ffi       Use system libffi (located with pkgconfig)],
+    MOZ_NATIVE_FFI=1 )
+
+if test -n "$MOZ_NATIVE_FFI"; then
+    PKG_CHECK_MODULES(MOZ_FFI, libffi)
+fi
+
+AC_SUBST(MOZ_NATIVE_FFI)
+
 dnl ========================================================
 dnl Java SDK support
 dnl ========================================================
@@ -8761,7 +8773,7 @@ ac_configure_args="$_SUBDIR_CONFIG_ARGS"
 # Build jsctypes on the platforms we can.
 if test "$BUILD_CTYPES"; then
   # Run the libffi 'configure' script on platforms that it supports.
-  if test -z "$_MSC_VER"; then
+  if test -z "$MOZ_NATIVE_FFI" && test -z "$_MSC_VER"; then
     ac_configure_args="--disable-shared --enable-static --disable-raw-api"
     if test "$MOZ_DEBUG"; then
       ac_configure_args="$ac_configure_args --enable-debug"
diff --git a/mozilla/js/ctypes/Makefile.in b/mozilla/js/ctypes/Makefile.in
index 2ccd495..35e5253 100644
--- a/mozilla/js/ctypes/Makefile.in
+++ b/mozilla/js/ctypes/Makefile.in
@@ -95,18 +95,26 @@ endif
 else # _MSVC_VER
 
 # build libffi proper
+ifdef MOZ_NATIVE_FFI
+LOCAL_INCLUDES = $(MOZ_FFI_CFLAGS)
+else
 LOCAL_INCLUDES = \
     -Ilibffi/include \
     $(NULL)
+endif
 
 ifeq ($(OS_ARCH),OS2)
 libffi/.libs/ffi.$(LIB_SUFFIX): libffi/.libs/$(LIB_PREFIX)ffi.a
 	emxomf $<
 endif
 
+ifdef MOZ_NATIVE_FFI
+EXTRA_DSO_LDOPTS += $(MOZ_FFI_LIBS)
+else
 SHARED_LIBRARY_LIBS = \
     libffi/.libs/$(LIB_PREFIX)ffi.$(LIB_SUFFIX) \
     $(NULL)
+endif
 
 endif # _MSVC_VER
 
diff --git a/mozilla/toolkit/library/libxul-config.mk b/mozilla/toolkit/library/libxul-config.mk
index 33b28a5..6618016 100644
--- a/mozilla/toolkit/library/libxul-config.mk
+++ b/mozilla/toolkit/library/libxul-config.mk
@@ -163,6 +163,9 @@ ifdef BUILD_CTYPES
 COMPONENT_LIBS += \
 	jsctypes \
 	$(NULL)
+ifdef MOZ_NATIVE_FFI
+EXTRA_DSO_LDOPTS += $(MOZ_FFI_LIBS)
+endif
 endif
 
 ifdef MOZ_PLUGINS
diff --git a/mozilla/toolkit/toolkit-tiers.mk b/mozilla/toolkit/toolkit-tiers.mk
index 08f7da7..3824f7c 100644
--- a/mozilla/toolkit/toolkit-tiers.mk
+++ b/mozilla/toolkit/toolkit-tiers.mk
@@ -92,12 +92,14 @@ tier_gecko_dirs += \
 		$(NULL)
 
 ifdef BUILD_CTYPES
+ifndef MOZ_NATIVE_FFI
 ifndef _MSC_VER
 tier_gecko_staticdirs += \
 		js/ctypes/libffi \
 		$(NULL)
 endif
 endif
+endif
 
 ifdef MOZ_ENABLE_GTK2
 ifdef MOZ_X11
-- 

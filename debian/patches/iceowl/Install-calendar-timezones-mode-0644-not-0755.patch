---
 calendar/lightning/Makefile.in |    2 +-
 calendar/timezones/Makefile.in |    2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/calendar/lightning/Makefile.in b/calendar/lightning/Makefile.in
index a78971d..0c03190 100644
--- a/calendar/lightning/Makefile.in
+++ b/calendar/lightning/Makefile.in
@@ -151,7 +151,7 @@ DEFINES += -DGRE_BUILDID=$(GRE_BUILDID)
 
 # xxx todo: unless our packaging story is revised (bug 406579) we package up timezones.sqlite

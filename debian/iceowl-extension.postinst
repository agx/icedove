#!/bin/sh
set -e

symlink_dir() {
    LNSOURCE=$1
    DIR=$2
    if [ ! -L $DIR ]; then
        rmdir $DIR
        ln -s $LNSOURCE $DIR
    fi
}

if test -e /usr/lib/icedove/.autoreg; then
  touch /usr/lib/icedove/.autoreg
fi

if [ "$1" = "configure" ] && dpkg --compare-versions "$2" lt "31.0-2"; then
    symlink_dir "/usr/share/iceowl-extension/chrome/icons" "/usr/lib/iceowl-extension/chrome/icons"
    symlink_dir "/usr/share/iceowl-extension/chrome/skin" "/usr/lib/iceowl-extension/chrome/skin"
fi

